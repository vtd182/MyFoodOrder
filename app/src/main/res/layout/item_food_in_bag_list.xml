<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/layout_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="6dp"
            >
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/banana_lickety_split"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/layout_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_item_food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kem tràng tiền"
                android:fontFamily="@font/svn_gilroy_semi_bold"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/svn_gilroy_semi_bold"
                    android:text="200.000d"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_subtract_item_food"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/svn_gilroy_semi_bold"
                        android:gravity="center"
                        android:text="-"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_quantity_item_food"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/svn_gilroy_semi_bold"
                        android:gravity="center"
                        android:text="5"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_add_item_food"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/svn_gilroy_semi_bold"
                        android:gravity="center"
                        android:text="+"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Delete"
            android:fontFamily="@font/svn_gilroy_semi_bold"
            android:textSize="15dp"/>


    </RelativeLayout>

</layout>